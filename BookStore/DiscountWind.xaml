<Window x:Class="BookStore.DiscountWind"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookStore"
        mc:Ignorable="d"
        Title="DiscountWind" Height="400" Width="600"
        MinHeight="400" MinWidth="600" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="30,12"></Setter>
            <Setter Property="Padding" Value="7"></Setter>
        </Style>
        <Style TargetType="DatePicker">
            <Setter Property="Margin" Value="30,15"></Setter>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="TextAlignment" Value="Center"></Setter>
            <Setter Property="VerticalAlignment" Value="Center"></Setter>
            <Setter Property="FontSize" Value="20"></Setter>
            <Setter Property="FontWeight" Value="SemiBold"></Setter>
            <Setter Property="Foreground" Value="White"></Setter>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Background" Value="ForestGreen"></Setter>
            <Setter Property="Foreground" Value="White"></Setter>
            <Setter Property="FontWeight" Value="Bold"></Setter>
            <Setter Property="FontSize" Value="24"></Setter>
            <Setter Property="Cursor" Value="Hand"></Setter>
            <Setter Property="Margin" Value="50,10"></Setter>
        </Style>
    </Window.Resources>
    <Grid Background="Gray">
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1.3*"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="1.3*"></RowDefinition>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Name="discountTb" FontSize="24" FontWeight="Bold">Discount:</TextBlock>

        <TextBlock Grid.Row="1" Grid.Column="0">Name:</TextBlock>
        <TextBlock Grid.Row="1" Grid.Column="1">Interest:</TextBlock>
        <TextBlock Grid.Row="1" Grid.Column="2">Start date:</TextBlock>

        <TextBox Name="disNameTb" Grid.Row="2" Grid.Column="0"></TextBox>
        <TextBox Name="disIntTb" Grid.Row="2" Grid.Column="1"></TextBox>
        <DatePicker Name="disStartDp" Grid.Row="2" Grid.Column="2"></DatePicker>

        <TextBlock Grid.Row="3" Grid.Column="1">End date:</TextBlock>

        <DatePicker Name="disEndDp" Grid.Row="4" Grid.Column="1"></DatePicker>

        <Button Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="3" Name="SaveBtn" Click="SaveBtn_Click">Add discount</Button>
    </Grid>
</Window>
