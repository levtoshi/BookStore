<Window x:Class="BookStore.BookModel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookStore"
        mc:Ignorable="d"
        Title="BookModel" Height="600" Width="700"
        MinHeight="600" MinWidth="700" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="30,10"></Setter>
            <Setter Property="Padding" Value="5"></Setter>
        </Style>
        <Style TargetType="DatePicker">
            <Setter Property="Margin" Value="30,10"></Setter>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="TextAlignment" Value="Center"></Setter>
            <Setter Property="VerticalAlignment" Value="Center"></Setter>
            <Setter Property="FontSize" Value="20"></Setter>
            <Setter Property="FontWeight" Value="SemiBold"></Setter>
            <Setter Property="Foreground" Value="White"></Setter>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Background" Value="ForestGreen"></Setter>
            <Setter Property="Foreground" Value="White"></Setter>
            <Setter Property="FontWeight" Value="Bold"></Setter>
            <Setter Property="FontSize" Value="24"></Setter>
            <Setter Property="Cursor" Value="Hand"></Setter>
            <Setter Property="Margin" Value="50,10"></Setter>
        </Style>
    </Window.Resources>
    <ScrollViewer HorizontalScrollBarVisibility="Auto">
        <Grid Background="Gray" Height="1050">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1.3*"></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition Height="1.3*"></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition Height="1.3*"></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition Height="1.3*"></RowDefinition>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Name="mainTb" FontSize="24" FontWeight="Bold"></TextBlock>

            <TextBlock Grid.Row="1" Grid.Column="0">Book name:</TextBlock>
            <TextBlock Grid.Row="1" Grid.Column="1">Author name:</TextBlock>
            <TextBlock Grid.Row="1" Grid.Column="2">Author middle name:</TextBlock>
            
            <TextBox Name="bookNameTb" Grid.Row="2" Grid.Column="0"></TextBox>
            <TextBox Name="authNameTb" Grid.Row="2" Grid.Column="1"></TextBox>
            <TextBox Name="authMidNameTb" Grid.Row="2" Grid.Column="2"></TextBox>

            <TextBlock Grid.Row="3" Grid.Column="0">Author last name:</TextBlock>
            <TextBlock Grid.Row="3" Grid.Column="1">Producer:</TextBlock>
            <TextBlock Grid.Row="3" Grid.Column="2">Pages:</TextBlock>

            <TextBox Name="authLastNameTb" Grid.Row="4" Grid.Column="0"></TextBox>
            <TextBox Name="prodTb" Grid.Row="4" Grid.Column="1"></TextBox>
            <TextBox Name="pagesTb" Grid.Row="4" Grid.Column="2"></TextBox>

            <TextBlock Grid.Row="5" Grid.Column="0">Genre:</TextBlock>
            <TextBlock Grid.Row="5" Grid.Column="1">Year:</TextBlock>
            <TextBlock Grid.Row="5" Grid.Column="2" FontSize="16">Continuation? (can be empty):</TextBlock>

            <TextBox Name="genreTb" Grid.Row="6" Grid.Column="0"></TextBox>
            <TextBox Name="yearTb" Grid.Row="6" Grid.Column="1"></TextBox>
            <TextBox Name="contTb" Grid.Row="6" Grid.Column="2"></TextBox>

            <TextBlock Grid.Row="7" Grid.Column="0">Amount:</TextBlock>
            <TextBlock Grid.Row="7" Grid.Column="1">Cost:</TextBlock>
            <TextBlock Grid.Row="7" Grid.Column="2">Price:</TextBlock>

            <TextBox Name="amountTb" Grid.Row="8" Grid.Column="0"></TextBox>
            <TextBox Name="costTb" Grid.Row="8" Grid.Column="1"></TextBox>
            <TextBox Name="priceTb" Grid.Row="8" Grid.Column="2"></TextBox>

            <TextBlock Grid.Row="9" Grid.Column="0" Grid.ColumnSpan="3" Name="discountTb" FontSize="24" FontWeight="Bold">Discount (can be empty):</TextBlock>

            <TextBlock Grid.Row="10" Grid.Column="0">Name:</TextBlock>
            <TextBlock Grid.Row="10" Grid.Column="1">Interest:</TextBlock>
            <TextBlock Grid.Row="10" Grid.Column="2">Start date:</TextBlock>

            <TextBox Name="disNameTb" Grid.Row="11" Grid.Column="0"></TextBox>
            <TextBox Name="disIntTb" Grid.Row="11" Grid.Column="1"></TextBox>
            <DatePicker Name="disStartDp" Grid.Row="11" Grid.Column="2"></DatePicker>

            <TextBlock Grid.Row="12" Grid.Column="1">End date</TextBlock>

            <DatePicker Name="disEndDp" Grid.Row="13" Grid.Column="1"></DatePicker>

            <TextBlock Grid.Row="14" Grid.Column="0" Grid.ColumnSpan="3" Name="delayTb" FontSize="24" FontWeight="Bold">Delay (can be empty):</TextBlock>

            <TextBlock Grid.Row="15" Grid.Column="0">Customer name:</TextBlock>
            <TextBlock Grid.Row="15" Grid.Column="1">Customer middle name:</TextBlock>
            <TextBlock Grid.Row="15" Grid.Column="2">Customer last name:</TextBlock>

            <TextBox Name="cusNameTb" Grid.Row="16" Grid.Column="0"></TextBox>
            <TextBox Name="cusMidNameTb" Grid.Row="16" Grid.Column="1"></TextBox>
            <TextBox Name="cusLastNameTb" Grid.Row="16" Grid.Column="2"></TextBox>

            <TextBlock Grid.Row="17" Grid.Column="0">Customer email:</TextBlock>
            <TextBlock Grid.Row="17" Grid.Column="2">Amount of books:</TextBlock>

            <TextBox Name="cusEmailTb" Grid.Row="18" Grid.Column="0"></TextBox>
            <TextBox Name="delayAmountTb" Grid.Row="18" Grid.Column="2"></TextBox>

            <Button Grid.Row="19" Grid.Column="0" Grid.ColumnSpan="3" Name="SaveBtn" Click="editBt_Click"></Button>
        </Grid>
    </ScrollViewer>
</Window>
