<Window x:Class="BookStore.DelayWind"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookStore"
        mc:Ignorable="d"
        Title="DelayWind" Height="400" Width="600"
        MinHeight="400" MinWidth="600" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="30,12"></Setter>
            <Setter Property="Padding" Value="5"></Setter>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="TextAlignment" Value="Center"></Setter>
            <Setter Property="VerticalAlignment" Value="Center"></Setter>
            <Setter Property="FontSize" Value="16"></Setter>
            <Setter Property="FontWeight" Value="SemiBold"></Setter>
            <Setter Property="Foreground" Value="White"></Setter>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Background" Value="ForestGreen"></Setter>
            <Setter Property="Foreground" Value="White"></Setter>
            <Setter Property="FontWeight" Value="Bold"></Setter>
            <Setter Property="FontSize" Value="22"></Setter>
            <Setter Property="Cursor" Value="Hand"></Setter>
            <Setter Property="Margin" Value="50,15"></Setter>
        </Style>
    </Window.Resources>
    <Grid Background="Gray">
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1.3*"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="1.3*"></RowDefinition>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Name="delayTb" FontSize="24" FontWeight="Bold">Delay book:</TextBlock>

        <TextBlock Grid.Row="1" Grid.Column="0">Customer name:</TextBlock>
        <TextBlock Grid.Row="1" Grid.Column="1">Customer middle name:</TextBlock>
        <TextBlock Grid.Row="1" Grid.Column="2">Customer last name:</TextBlock>

        <TextBox Name="cusNameTb" Grid.Row="2" Grid.Column="0"></TextBox>
        <TextBox Name="cusMidNameTb" Grid.Row="2" Grid.Column="1"></TextBox>
        <TextBox Name="cusLastNameTb" Grid.Row="2" Grid.Column="2"></TextBox>

        <TextBlock Grid.Row="3" Grid.Column="0">Customer email:</TextBlock>
        <TextBlock Grid.Row="3" Grid.Column="2">Amount of books:</TextBlock>

        <TextBox Name="cusEmailTb" Grid.Row="4" Grid.Column="0"></TextBox>
        <TextBox Name="delayAmountTb" Grid.Row="4" Grid.Column="2"></TextBox>

        <Button Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="3" Name="SaveBtn" Click="SaveBtn_Click">Delay</Button>
    </Grid>
</Window>
