<Window x:Class="BookStore.LoginWind"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookStore"
        mc:Ignorable="d"
        Title="LoginWind" Height="400" Width="300" MinHeight="400" MinWidth="300" MaxHeight="400" MaxWidth="300" WindowStartupLocation="CenterScreen" Closing="Window_Closing">
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="24"></Setter>
            <Setter Property="FontWeight" Value="Bold"></Setter>
            <Setter Property="Foreground" Value="White"></Setter>
            <Setter Property="VerticalAlignment" Value="Center"></Setter>
            <Setter Property="TextAlignment" Value="Center"></Setter>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="30,10"></Setter>
            <Setter Property="Padding" Value="8"></Setter>
        </Style>
        <Style TargetType="PasswordBox">
            <Setter Property="Margin" Value="30,10"></Setter>
            <Setter Property="Padding" Value="8"></Setter>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Background" Value="ForestGreen"></Setter>
            <Setter Property="Foreground" Value="White"></Setter>
            <Setter Property="FontWeight" Value="Bold"></Setter>
            <Setter Property="FontSize" Value="24"></Setter>
            <Setter Property="Cursor" Value="Hand"></Setter>
            <Setter Property="Margin" Value="50,20"></Setter>
        </Style>
    </Window.Resources>
    <Grid Background="Gray">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="1.5*"></RowDefinition>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0">Login</TextBlock>

        <TextBlock Grid.Row="1">Username:</TextBlock>
        <TextBox x:Name="usernameTb" Grid.Row="2"></TextBox>

        <TextBlock Grid.Row="3">Password:</TextBlock>
        <PasswordBox x:Name="passwordPb" Grid.Row="4"></PasswordBox>

        <Button x:Name="loginBtn" Click="loginBtn_Click" Grid.Row="5">Login</Button>
    </Grid>
</Window>
