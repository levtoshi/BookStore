<Window x:Class="BookStore.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookStore"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1300" MinHeight="800" MinWidth="1300"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="ForestGreen"></Setter>
            <Setter Property="Foreground" Value="White"></Setter>
            <Setter Property="FontWeight" Value="SemiBold"></Setter>
            <Setter Property="FontSize" Value="18"></Setter>
            <Setter Property="Cursor" Value="Hand"></Setter>
            <Setter Property="Margin" Value="5,15"></Setter>
            <Setter Property="Padding" Value="7"></Setter>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="22"></Setter>
            <Setter Property="Foreground" Value="White"></Setter>
            <Setter Property="FontWeight" Value="Bold"></Setter>
            <Setter Property="TextAlignment" Value="Center"></Setter>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="30,15"></Setter>
            <Setter Property="Padding" Value="5"></Setter>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="Margin" Value="30,10"></Setter>
            <Setter Property="Padding" Value="0,2"></Setter>
        </Style>
    </Window.Resources>
    <Grid Background="Gray">
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition Width="0.2*"></ColumnDefinition>
            <ColumnDefinition Width="0.25*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <DataGrid Grid.Column="0" Grid.Row="0" Grid.RowSpan="2" Margin="20, 50" Name="mainGrid" AutoGenerateColumns="False" FontSize="14" CanUserAddRows="False" CanUserDeleteRows="False" IsReadOnly ="True">
        </DataGrid>

        <StackPanel Grid.Column="1" Grid.Row="0">
            <TextBlock Margin="0,50,0,10">Book Model</TextBlock>
            <Button Name="AddBookBtn" Click="AddBookBtn_Click" Content="Add new book"></Button>
            <Button Name="UpdateBookBtn" Click="UpdateBookBtn_Click" Content="Update book"></Button>
            <Button Name="DeleteBookBtn" Click="DeleteBookBtn_Click" Content="Delete book"></Button>
            <Button Name="AddDiscountBtn" Click="AddDiscountBtn_Click" Content="Add discount"></Button>
        </StackPanel>
        
        <StackPanel Grid.Column="1" Grid.Row="1">
            <TextBlock Margin="0,20,0,10">Book Stock</TextBlock>
            <Button Name="AddBooksBtn" Click="AddBooksBtn_Click" Content="Add books"></Button>
            <Button Name="WriteOffBooksBtn" Click="WriteOffBooksBtn_Click" Content="Write off books"></Button>
            <Button Name="SellBooksBtn" Click="SellBooksBtn_Click" Content="Sell books"></Button>
            <Button Name="DelayBookBtn" Click="DelayBookBtn_Click" Content="Delay book"></Button>
        </StackPanel>

        <StackPanel Grid.Column="2" Grid.Row="0" Grid.RowSpan="2">
            <TextBlock x:Name="usernameTb" Margin="20,10" TextAlignment="Right" Foreground="Bisque"></TextBlock>
            <TextBlock>Search book</TextBlock>
            <TextBlock>with name:</TextBlock>
            <TextBox x:Name="nameSearchTb"></TextBox>
            <StackPanel Orientation="Horizontal">
                <Button x:Name="SearchBtn" Click="SearchBtn_Click" Margin="25,0,0,0">Search</Button>
                <Button x:Name="SearchDefaultBtn" Click="SearchDefaultBtn_Click" Margin="25,0,0,0">Default</Button>
            </StackPanel>
            
            
            <TextBlock Margin="0,30,0,10">Filter with</TextBlock>
            <TextBlock>Author:</TextBlock>
            <ComboBox Name="authorCb" SelectionChanged="authorCb_Selected" FontWeight="SemiBold" FontSize="16"></ComboBox>
            
            <TextBlock>Genre:</TextBlock>
            <ComboBox Name="genreCb" SelectionChanged="genreCb_SelectionChanged" FontWeight="SemiBold" FontSize="16"></ComboBox>

            <TextBlock>Order:</TextBlock>
            <ComboBox Name="orderCb" SelectionChanged="orderCb_SelectionChanged" Padding="5">
                <ComboBoxItem>
                    <TextBlock FontWeight="SemiBold" FontSize="16" Foreground="Black">Default</TextBlock>
                </ComboBoxItem>
                <ComboBoxItem>
                    <TextBlock FontWeight="SemiBold" FontSize="16" Foreground="Black">Newest</TextBlock>
                </ComboBoxItem>
                <ComboBoxItem>
                    <TextBlock FontWeight="SemiBold" FontSize="16" Foreground="Black">Oldest</TextBlock>
                </ComboBoxItem>
            </ComboBox>

            <TextBlock Margin="0,30,0,0">Show the most</TextBlock>
            <TextBlock Margin="0,0,0,10">popular</TextBlock>
            <ComboBox Name="popularTypeCb" SelectionChanged="popularTypeCb_SelectionChanged" Padding="5">
                <ComboBoxItem>
                    <TextBlock FontWeight="SemiBold" FontSize="16" Foreground="Black">Default</TextBlock>
                </ComboBoxItem>
                <ComboBoxItem>
                    <TextBlock FontWeight="SemiBold" FontSize="16" Foreground="Black">Book</TextBlock>
                </ComboBoxItem>
                <ComboBoxItem>
                    <TextBlock FontWeight="SemiBold" FontSize="16" Foreground="Black">Author</TextBlock>
                </ComboBoxItem>
                <ComboBoxItem>
                    <TextBlock FontWeight="SemiBold" FontSize="16" Foreground="Black">Genre</TextBlock>
                </ComboBoxItem>
            </ComboBox>

            <TextBlock>during this</TextBlock>
            <ComboBox Name="popularDurationCb" SelectionChanged="popularDurationCb_SelectionChanged" Padding="5">
                <ComboBoxItem>
                    <TextBlock FontWeight="SemiBold" FontSize="16" Foreground="Black">Default</TextBlock>
                </ComboBoxItem>
                <ComboBoxItem>
                    <TextBlock FontWeight="SemiBold" FontSize="16" Foreground="Black">Day</TextBlock>
                </ComboBoxItem>
                <ComboBoxItem>
                    <TextBlock FontWeight="SemiBold" FontSize="16" Foreground="Black">Week</TextBlock>
                </ComboBoxItem>
                <ComboBoxItem>
                    <TextBlock FontWeight="SemiBold" FontSize="16" Foreground="Black">Month</TextBlock>
                </ComboBoxItem>
                <ComboBoxItem>
                    <TextBlock FontWeight="SemiBold" FontSize="16" Foreground="Black">Year</TextBlock>
                </ComboBoxItem>
            </ComboBox>

        </StackPanel>

    </Grid>
</Window>
